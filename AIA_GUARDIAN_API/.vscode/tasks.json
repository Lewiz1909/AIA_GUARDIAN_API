{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build ConfigManager",
      "type": "shell",
      "command": "g++",
      "args": [
        "-I", "../include",
        "-I", "D:/vcpkg/installed/x64-windows/include",
        "config_manager.cpp",
        "-o", "config_manager.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
